@model IEnumerable<Basketball.Models.Models.Country>
@{
    ViewBag.Title = "Add";
}
@Html.Partial("_AdminSubnav")
<h2>Add new player</h2>

@using (Html.BeginForm("Add", "Player", FormMethod.Post))
{
    <table width="50%">
        <tr><td width="30%"><label>First Name</label> </td><td><input type="text" name="firstName" /></td></tr>
        <tr><td><label>Last Name</label> </td><td><input type="text" name="lastName" /></td></tr>
        <tr><td><label>Height</label> </td><td><input type="text" name="height" /></td></tr>
        <tr><td><label>Position</label> </td><td><input type="text" name="position" /></td></tr>
        <tr><td><label>Nationality</label> </td><td><input type="text" name="nationality" /></td></tr>
        <tr><td><label>Naturalized nationality</label> </td><td><input type="text" name="naturalizedNationality" /></td></tr>
    </table>

    <input type="submit" value="Submit" />
}
